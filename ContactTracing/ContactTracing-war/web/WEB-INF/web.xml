<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ResController</servlet-name>
        <servlet-class>Controller.ResController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResController</servlet-name>
        <url-pattern>/ResController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>403</error-code>
        <location>/errorForbidden.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>burger</display-name>
        <web-resource-collection>
            <web-resource-name>burger</web-resource-name>
            <description>burger map</description>
            <url-pattern>/burger/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>burger</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>arts</display-name>
        <web-resource-collection>
            <web-resource-name>arts</web-resource-name>
            <description>arts map</description>
            <url-pattern>/arts/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>arts</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>ContactTracingRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/loginError.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>burger rechten</description>
        <role-name>burger</role-name>
    </security-role>
    <security-role>
        <description>arts rechten</description>
        <role-name>arts</role-name>
    </security-role>
    <security-role>
        <description>admin rechten voor aanpassingen</description>
        <role-name>admin</role-name>
    </security-role>
</web-app>
